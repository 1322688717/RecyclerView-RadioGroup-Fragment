<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingTop="20dp"
        >
        <TextView
            android:id="@+id/tv_equipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/text_item_two"
            android:text="仪器"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户"
            android:textSize="18dp"
            android:textColor="@drawable/text_item_two"
            android:layout_below="@+id/tv_equipment"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/equipment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xxxx"
            android:textSize="25dp"
            android:textColor="@drawable/text_item_two"
            android:layout_toRightOf="@+id/tv_equipment"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx"
            android:textSize="18dp"
            android:textColor="@drawable/text_item_two"
            android:layout_toRightOf="@+id/tv_user"
            android:layout_below="@+id/equipment_name"
            android:layout_marginLeft="20dp"
            />
<!--        <View-->
<!--            android:id="@+id/v_off_line"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1px"-->
<!--            android:background="@color/black"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_below="@+id/tv_user"-->
<!--            />-->
    </RelativeLayout>


</LinearLayout>